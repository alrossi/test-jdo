<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence 
                        http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd"
    version="1.0">
    
    <!-- XML -->
    <persistence-unit name="XmlStore">
        <mapping-file>/mydomain/model/xml/package.jdo</mapping-file>
    </persistence-unit>

    <!-- HSQLDB -->
    <persistence-unit name="HsqldbStore">
        <mapping-file>/mydomain/model/hsqldb/package.jdo</mapping-file>
        <properties>
            <property name="javax.jdo.option.DetachAllOnCommit" value="true"/>
            <property name="javax.jdo.option.Optimistic" value="true"/>
            <property name="javax.jdo.option.NontransactionalRead" value="true"/>
            <property name="javax.jdo.option.RetainValues" value="true"/>
            <property name="javax.jdo.option.Multithreaded" value="true"/>
            <property name="datanucleus.ConnectionDriverName" value="org.hsqldb.jdbcDriver"/>
            <property name="datanucleus.autoCreateSchema" value="true"/>
            <property name="datanucleus.validateTables" value="false"/>
            <property name="datanucleus.validateConstraints" value="false"/>
            <property name="datanucleus.autoCreateColumns" value="true"/>
            <property name="datanucleus.connectionPoolingType" value="None"/>
        </properties>
    </persistence-unit>
</persistence>
