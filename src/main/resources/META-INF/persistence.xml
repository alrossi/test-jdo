<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd"
    version="1.0">
    
    <!-- XML -->
    <persistence-unit name="XmlStore">
        <class>persistence.model.xml.XmlEntry</class>
        <exclude-unlisted-classes/>
        <properties>
            <property name="datanucleus.ConnectionURL" value="xml:file:/tmp/store.xml"/>
        </properties>
    </persistence-unit>

    <!-- HSQLDB -->
    <persistence-unit name="HsqldbStore">
        <class>persistence.model.hsqldb.HsqldbEntry</class>
        <exclude-unlisted-classes/>
        <properties>
            <property name="datanucleus.ConnectionDriverName" value="org.hsqldb.jdbcDriver"/>
            <property name="datanucleus.ConnectionURL" value="jdbc:hsqldb:mem:nucleus1"/>
            <property name="datanucleus.ConnectionUserName" value="sa"/>
            <property name="datanucleus.ConnectionPassword" value=""/>
        </properties>
    </persistence-unit>

</persistence>

</persistence>
